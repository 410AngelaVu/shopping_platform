<% @products.each do |product| %>
<p>
  <strong>Name:</strong>
  <%= product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= product.price %>
</p>
<p>
  <strong>Quantity:</strong>
  <%= product.quantity %>
</p>
<p>
<strong>Author:</strong>
  <%= product.supplier.name %>
</p>
<% end %>